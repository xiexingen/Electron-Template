{
  "name": "electron-template",
  "version": "1.0.0",
  "description": "A Electron application",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch index.js --exec electron .",
    "build-icon": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "build": "electron-builder"
  },
  "keywords": [
    "Electron",
    "quick",
    "remote"
  ],
  "author": "xiexingen",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^22.14.5",
    "electron-icon-builder": "^2.0.1",
    "nodemon": "^2.0.20"
  },
  "build": {
    "appId": "easy spec",
    "productName": "Easy Spec",
    "copyright": "Copyright Â© 2021 Prin-Cen",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
